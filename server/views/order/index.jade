extends ../layout.jade

block content
  script(src='/js-static/notifications.js')
  script(src='/js-static/order.js')
  .row-fluid
    .box.black.span12.noMargin(ontablet='span12', ondesktop='span12' style='margin-bottom:0px !important')
      .box-header
        h2
          i.fa.fa-glass(style='color:white;')
          span.break
          | Drinks
        .box-icon
          a.btn-minimize(href='#')
            i.halflings-icon.white.chevron-up
          a.btn-close(href='#')
            i.halflings-icon.white.remove
      .box-content
        form(action='/order' method='POST' style='margin-bottom:0px')
          input(type='hidden' name='location' value=brevages[0].location)
          ul.tickets.metro
            li.ticket.red
              span.header
                span.title(style='font-size: 20px;margin-top: 6px;') Total price
                input.number(type='submit' style='font-size: 15px;margin-top: 5px; margin-left:5px;border: 1px solid;padding: 1px;border-radius: 5px;background: none; color: white;' value='buy')
                span.number(style='font-size: 25px;margin-top: 5px;margin-right:5px;') €
                span.number(id='total' name='total' style='font-size: 25px;margin-top: 5px;margin-right:5px;') 0
            each brevage, i in brevages
              li(class=(i % 2 === 0 ? 'ticket blue' : 'ticket yellow'))
                a(href='#')
                  span.header
                    span.title #{brevage.name} -- #{brevage.size}
                    span.number Unit
                    span.number(style='margin-right: 5px;') Price
                  span.content
                    span.avatar
                      img(src='data:image/png;base64,', alt='Avatar')
                    span.name(style='margin-top:5px')
                      i.fa.fa-2x.fa-plus-circle(style='margin-right: 10px;' onclick='addDrink("#{brevage._id}", #{brevage.price})')
                      i.fa.fa-2x.fa-minus-circle(onclick='removeDrink("#{brevage._id}", #{brevage.price})')
                    span.priority(id=brevage._id style='font-weight: bold; margin-right: 10px;') 0
                    span.priority(style='font-weight: bold; margin-right: 5px;') x
                    span.priority(style='margin-right: 5px; font-weight: bold') #{brevage.price} €
                    input(type='hidden' id="hidden_#{brevage._id}" name=brevage._id style='margin-right: 5px; font-weight: bold' value = 0)
